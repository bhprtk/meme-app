<!DOCTYPE html>
<html>
  <head>
    <title>meme-hub</title>

    <link rel="stylesheet" href="/bower_components/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/bower_components/bootstrap-social/bootstrap-social.css">
    <link rel="stylesheet" href="/bower_components/angular-material/angular-material.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css">
    <link href='https://fonts.googleapis.com/css?family=Stalemate' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Indie+Flower' rel='stylesheet' type='text/css'>

    <link rel="icon" href="http://www.cursor.cc/cursor/848/2/cursor.png" type="image/x-icon" />

    <link rel='stylesheet' href='/css/animate.css'>
    <link rel='stylesheet' href='/css/style.css'>

    <script src="/bower_components/angular/angular.js"></script>
    <script src="/bower_components/angular-ui-router/release/angular-ui-router.min.js"></script>
    <script src="/bower_components/angular-aria/angular-aria.js"></script>
    <script src="/bower_components/angular-animate/angular-animate.js"></script>
    <script src="/bower_components/angular-material/angular-material.js"></script>
    <script src="/bower_components/angular-messages/angular-messages.min.js"></script>

    <script src="/bower_components/ng-file-upload/ng-file-upload-shim.min.js"></script>
    <script src="/bower_components/ng-file-upload/ng-file-upload.min.js"></script>

    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>

    <script src="/bower_components/satellizer/satellizer.min.js"></script>
    <script src="/bower_components/ngstorage/ngStorage.min.js"></script>

    <script src="/js/module.js"></script>
    <script src="/js/services.js"></script>

    <script src="/js/controllers/registerCtrl.js"></script>
    <script src="/js/controllers/loginCtrl.js"></script>
    <script src="/js/controllers/mainCtrl.js"></script>
    <script src="/js/controllers/uploadCtrl.js"></script>
    <script src="/js/controllers/homeCtrl.js"></script>
    <script src="/js/controllers/profileCtrl.js"></script>
    <script src="/js/controllers/settingsCtrl.js"></script>
    <script src="/js/controllers/commentsCtrl.js"></script>

  </head>
  <body ng-app="memeApp" ng-controller="mainCtrl" bgcolor="#fafafa">

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">

        <div class="col-md-12 col-sm-12 col-xs-12">

          <a class="navbar-brand" ui-sref="home" style="padding-top: 25px; margin-bottom: 15px;">
            <strong style="color: white;">meme-hub</strong>
            <md-tooltip md-direction="bottom" style="margin-top: 10px;">
              Home
            </md-tooltip>
          </a>

          <ul class="nav navbar-nav navbar-right" ng-if="!isAuthenticated()">
            <li>
              <button class="btn btn-primary signing-buttons" style="background: #ff4c4c;" ui-sref="login">
                <strong>Sign in</strong>
              </button>
            </li>
            <li>
              <button class="btn btn-primary signing-buttons" style="background: #528B8B;" ui-sref="register">
                <strong>Sign up</strong>
              </button>
            </li>
          </ul>

          <ul class="nav navbar-nav navbar-right" ng-if="isAuthenticated()">
            <!-- <li><a>hi {{$storage.currentUser.displayName}}</a></li> -->



            <!-- Single button -->
            <li class="btn-group nav-buttons">
              <button class="btn btn-success-outline dropdown-toggle" data-toggle="dropdown" style="background:#222222; color:white">
                <img ng-src="{{$storage.currentUser.picture || 'http://cdn1.thelittlenews.com/wp-content/uploads/2015/09/wallpaper-for-facebook-profile-photo-450x400.jpg'}}" class="menu-pic">
                <span><strong>{{$storage.currentUser.displayName}}</strong></span>
                <span class="caret"></span>
              </button>


              <ul class="dropdown-menu">
                <li>
                  <a role="button" ui-sref="profile">
                    <div layout="row" layout-align="space-between center">
                      <span>Profile</span>
                      <span class="fa fa-user"></span>

                    </div>
                  </a>
                </li>

                <li>
                  <a role="button" ui-sref="settings">
                    <div layout="row" layout-align="space-between center">
                      <span>Settings</span>
                      <span class="fa fa-cog"></span>

                    </div>
                  </a>
                </li>

                <li role="separator" class="divider"></li>

                <li>
                  <a role="button" ng-click="logout()">
                    <div layout="row" layout-align="space-between center">
                      <span>Log out</span>
                      <span class="fa fa-sign-out"></span>

                    </div>
                  </a>
                </li>
              </ul>
            </li>




            <!-- <li><a role="button" ng-click="logout()">Log out</a></li> -->
            <!-- <li class="nav-buttons"><button class="btn btn-success" style="margin-top: 10px;" ui-sref="upload">Upload</button></li> -->
          </ul>
        </div>



      </div>
    </nav>



    <div class="container ui-view-display">
      <ui-view> </ui-view>
    </div>


  </body>
</html>
